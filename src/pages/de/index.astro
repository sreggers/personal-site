<style>
	.info-section {
		width: 100%;
	}

	.info-section section {
		padding-top: 2rem;
		min-height: 95vh
	}

	.info-section h1 {
		color: #DE482B;
		font-size: 2em;
		line-height: 3em;
	}

	.info-section h2 {
		color: #000000;
		font-size: 1.5em;
		display: inline;
		border-bottom: 4px solid #FCCF03
	}

	.info-section h3 {
		color: #DE482B;
	}

	.info-section h4 {
		color: #3B77BC;
	}

	.info-section article:first-of-type {
		margin-top: 1.5rem;
	}

	.info-section article {
		margin-bottom: 3rem;
	}

	.info-section article p {
		margin: 1rem 0;
	}

	.info-section article li::marker {
		color: #FCCF03;
	}

	.highlight {
		border-bottom: 2px solid #FCCF03;
	}

	@media only screen and (min-width: 768px) and (min-height: 575px) {

		.info-section {
			padding: 0 3em;
			width: 75%;
		}

		.info-section section {
			min-height: 95vh
		}
		
	}

	@media only screen and (min-width: 1200px) {

		.info-section {
			min-width: 85%;
		}

	}
</style>